@model InmobiliariaLorenzo.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

<h1 class="mt-4 mb-4 text-center text-danger">
    <i class="bi bi-person-x-fill"></i> Eliminar Usuario
</h1>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <i class="bi bi-exclamation-triangle-fill"></i> Confirmación de Eliminación
    </div>
    <div class="card-body">
        <p class="mb-4 fs-5">¿Estás seguro que deseas eliminar este usuario?</p>

        <dl class="row mb-4">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id_Usuario)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id_Usuario)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Apellido)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Mail)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Mail)</dd>
        </dl>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>

            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id_Usuario" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash3-fill"></i> Confirmar Eliminación
                </button>
            </form>
        </div>
    </div>
</div>
