@model InmobiliariaLorenzo.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<h2 class="text-primary">Editar Perfil</h2>
<hr class="border border-secondary border-1" />

@if (TempData["editado"] != null)
{
    <div class="alert alert-success" role="alert">
        Usuario editado exitosamente
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark fw-bold">
        Editar Perfil
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-lg-5">
                <form asp-action="EditarPerfil" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" name="Id_Usuario" value="@Model.Id_Usuario" />

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mail" class="form-label"></label>
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rol" class="form-label"></label>
                        <select class="form-select" name="Rol">
                            @{
                                if (User.IsInRole("Administrador"))
                                {
                                    @:<option @(Model.Rol == 1 ? "selected" : "") value="1">Administrador</option>
                                }
                                @:<option @(Model.Rol != 1 ? "selected" : "") value="2">Empleado</option>
                            }
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <div class="mb-3 text-center">
                        <img src="@(string.IsNullOrEmpty(Model.Avatar) ? "/Uploads/av1.jpg" : Model.Avatar)" class="rounded-circle shadow" style="width: 80px; height: 80px;" alt="Avatar" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="AvatarFile" class="form-label"></label>
                        <input asp-for="AvatarFile" class="form-control" />
                        <span asp-validation-for="AvatarFile" class="text-danger"></span>
                    </div>

                    <input asp-for="Avatar" class="form-control" type="hidden" />

                    <div class="mb-3">
                        <input type="submit" value="Editar" class="btn btn-warning w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br>
