@model InmobiliariaLorenzo.Models.Usuario

@{
    ViewData["Title"] = "Detalles de Usuario";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

<h1 class="mt-4 mb-4 text-center">
    <i class="bi bi-person-lines-fill"></i> Detalles de Usuario
</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-info-circle-fill"></i> Información del Usuario
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-3 text-center">
                <img src="@(string.IsNullOrEmpty(Model.Avatar) ? "/Uploads/av1.jpg" : Model.Avatar)" class="rounded-circle shadow-sm" style="width: 120px; height: 120px;" alt="Avatar" />
            </div>
            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.Id_Usuario</dd>

                    <dt class="col-sm-4">Apellido</dt>
                    <dd class="col-sm-8">@Model.Apellido</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4">Correo electrónico</dt>
                    <dd class="col-sm-8">@Model.Mail</dd>

                    <dt class="col-sm-4">Contraseña</dt>
                    <dd class="col-sm-8">*******</dd>

                    <dt class="col-sm-4">Rol</dt>
                    <dd class="col-sm-8">@Model.Rol</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-end">
    <a asp-action="EditarPerfil" asp-route-id="@Model.Id_Usuario" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle"></i> Volver al listado
    </a>
</div>
