@model IEnumerable<Propietario>

@{
    ViewData["Title"] = "Propietarios";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<h1 class="mt-4 mb-4 text-center"> <i class="bi bi-person-badge"></i>Lista de Propietarios</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Crear nuevo
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id_Propietario)</th>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.First().Dni)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Telefono)</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id_Propietario</td>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Dni</td>
            <td>@item.Email</td>
            <td>@item.Telefono</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id_Propietario" class="btn btn-sm btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id_Propietario" class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
