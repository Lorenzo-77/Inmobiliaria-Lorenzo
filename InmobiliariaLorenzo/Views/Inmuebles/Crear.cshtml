@model InmobiliariaLorenzo.Models.Inmueble

@{
    ViewData["Title"] = "Crear Inmueble";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<h2 class="text-center my-4"><i class="bi bi-house-add-fill"></i> Crear Inmueble</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Id_Propietario" class="form-label">Propietario</label>
                    <select class="form-select" id="Id_Propietario" name="Id_Propietario">
                        <option value="">Seleccione un propietario</option>
                        @foreach (var propietario in ViewBag.ListaPropietarios)
                        {
                            <option value="@propietario.Id">@propietario.Nombre @propietario.Apellido</option>
                        }
                    </select>
                    <span asp-validation-for="Id_Propietario" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Direccion" class="form-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="Id_Uso" class="form-label">Uso</label>
                    <select class="form-select" id="Id_Uso" name="Id_Uso">
                        <option value="">Seleccione un uso</option>
                        @foreach (var uso in ViewBag.Usos)
                        {
                            <option value="@uso.Id">@uso.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="Id_Uso" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="Id_Tipo" class="form-label">Tipo</label>
                    <select class="form-select" id="Id_Tipo" name="Id_Tipo">
                        <option value="">Seleccione un tipo</option>
                        @foreach (var tipo in ViewBag.Tipos)
                        {
                            <option value="@tipo.Id">@tipo.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="Id_Tipo" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Ambientes" class="form-label"></label>
                    <input asp-for="Ambientes" class="form-control" />
                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Latitud" class="form-label"></label>
                    <input asp-for="Latitud" class="form-control" />
                    <span asp-validation-for="Latitud" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Longitud" class="form-label"></label>
                    <input asp-for="Longitud" class="form-control" />
                    <span asp-validation-for="Longitud" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3 form-check form-switch mt-4">
                    <input type="checkbox" asp-for="Activo" class="form-check-input" />
                    <label class="form-check-label" asp-for="Activo">Activo</label>
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>

                <div class="col-md-3 mb-3 form-check form-switch mt-4">
                    <input type="checkbox" asp-for="Disponible" class="form-check-input" />
                    <label class="form-check-label" asp-for="Disponible">Disponible</label>
                    <span asp-validation-for="Disponible" class="text-danger"></span>
                </div>
            </div>

            <div class="text-end mt-4">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
