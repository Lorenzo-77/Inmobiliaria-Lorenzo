@model InmobiliariaLorenzo.Models.Pago

@{
    ViewData["Title"] = "Realizar Pago";
}

<h2>Realizar Pago</h2>
<hr />

<div class="card">
    <div class="card-header bg-primary text-white">
        Realizar Pago
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Fecha" class="form-label"></label>
                <input asp-for="Fecha" class="form-control" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Importe" class="form-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Id_Contrato" class="form-label"></label>
                <input asp-for="Id_Contrato" class="form-control" />
                <span asp-validation-for="Id_Contrato" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
            </div>
        </form>
    </div>
</div>
