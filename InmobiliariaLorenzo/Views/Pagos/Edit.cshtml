@model InmobiliariaLorenzo.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<h2>Editar Pago</h2>
<hr />

<div class="card">
    <div class="card-header bg-warning text-dark">
        Formulario de Edici√≥n
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id_Pago" />

            <div class="mb-3">
                <label asp-for="Fecha" class="form-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Importe" class="form-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Id_Contrato" class="form-label"></label>
                <input asp-for="Id_Contrato" class="form-control" />
                <span asp-validation-for="Id_Contrato" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <input type="submit" value="Guardar cambios" class="btn btn-warning me-2" />
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
        </form>
    </div>
</div>
