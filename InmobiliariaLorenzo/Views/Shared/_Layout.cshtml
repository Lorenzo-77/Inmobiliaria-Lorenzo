<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobiliaria Lorenzo</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InmobiliariaLorenzo.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building-fill"></i> Inmobiliaria Lorenzo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Propietarios" asp-action="Index">
                                <i class="bi bi-person-badge"></i> Propietarios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Inquilinos" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Inquilinos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Inmuebles" asp-action="Index">
                                <i class="bi bi-building"></i> Inmuebles
                            </a>
                        </li>
                        <li class="nav-item"></li>
                            <a class="nav-link text-dark" asp-controller="Inmuebles" asp-action="BuscarInmuebles">
                                <i class="bi bi-building"></i> Busqueda de Inmuebles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Contratos" asp-action="Index">
                                <i class="bi bi-file-earmark-text"></i> Contratos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Pagos" asp-action="Index">
                                <i class="bi bi-cash-coin"></i> Pagos
                            </a>
                        </li>

                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-person-gear"></i> Usuarios
                                </a>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownInformes"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-graph-up"></i> Informes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownInformes">
                                <li><a class="dropdown-item" asp-controller="Contratos" asp-action="ContratosVigentes">Contratos Vigentes</a></li>
                                <li><a class="dropdown-item" asp-controller="Contratos" asp-action="ContratosInmuebles">Contratos por Inmueble</a></li>
                                <li><a class="dropdown-item" asp-controller="Inmuebles" asp-action="InmueblesEstados">Inmuebles por Disponibilidad</a></li>
                                <li><a class="dropdown-item" asp-controller="Inmuebles" asp-action="InmueblesContratos">Disponibles por Fecha</a></li>
                            </ul>
                        </li>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownPerfil"
                                    role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Perfil
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownPerfil">
                                    <li><a class="dropdown-item" asp-controller="Usuarios"
                                            asp-action="EditarPerfil">Editar Perfil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Usuarios"
                                            asp-action="CambiarPassword">Cambiar Password</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Usuarios"
                                            asp-action="Logout">Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - Inmobiliaria Lorenzo
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
